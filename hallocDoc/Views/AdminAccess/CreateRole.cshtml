@model halloDocEntities.ViewDataModels.CreateRoleData;
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_AdminAccess.cshtml";
}
<div class="docMain mt-2">
    <div class="dmboxbar ">
        <h2 m-0>Create Role</h2>
        <a asp-area="" asp-controller="AdminAccess" asp-action="AccountAccess" class="logout tdn dmnewreq mb-3">Back</a>
    </div>

    <div class="dmbox pb-5">

        @*<form asp-controller="AdminAccess" asp-action="CreateRolePost" class="row g-2 g-md-3">*@
        <form asp-controller="AdminAccess"
              asp-action="@(ViewBag.RoleName == "fresh" ? "CreateRolePost" : "EditRolePost")"
              class="row g-2 g-md-3">

            <h4>Details</h4>

            <div class="form-floating col-12 col-md-6">
                @if (ViewBag.RoleName == "fresh")
                {
                    <input type="text" asp-for="roleName" class="form-control" id="fdate2" placeholder="Password">
                }
                else
                {
                    <input type="text" asp-for="roleName" class="form-control" id="fdate2" placeholder="Password" value="@ViewBag.RoleName">
                    <input asp-for="roleId" hidden type="text" value="@ViewBag.roleId" />
                }
                <label class="mylable" for="fdate2">Role Name</label>
                <span class="text-danger"></span>
            </div>

            <div class="form-floating col-12 col-md-6 d-flex justify-content-center align-items-center">
                <select asp-for="accountType" id="accountTypeDropdown" class="form-select pt-0 pb-0">
                    <option selected value="">Account Type</option>
                    @if (Model.accountTypeList != null)
                    {
                        @foreach (var item in Model.accountTypeList)
                        {
                            if (ViewBag.AccountType != null && ViewBag.AccountType == item.AspNetRoleId)
                            {
                                <option value="@item.AspNetRoleId" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.AspNetRoleId">@item.Name</option>
                            }
                        }
                    }
                </select>
                <span class="text-danger"></span>
            </div>

            <div id="menuListContainer" class="form-floating col-12 border-1">
                <div class="row">
                    <div class="col">
                        @if (Model?.menuList?.Count != 0)
                        {
                            @foreach (var item in Model?.menuList)
                            {
                                if (ViewBag.SelectedMenuItem == null)
                                {
                                    <div class="form-check form-check-inline parent-div-class">
                                        <input name="menuItem" accountType="@item.AccountType" class="form1 form-check-input text-info" type="checkbox" id="checkbox-@item.Name" value="@item.MenuId" style="display:block;">
                                        <label for="checkbox-@item.Name" class="form-check-label">@item.Name</label>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-check form-check-inline parent-div-class">
                                        <input name="menuItem" accountType="@item.AccountType" class="form1 form-check-input text-info" type="checkbox" id="checkbox-@item.Name" value="@item.MenuId" style="display:block;" @(ViewBag.SelectedMenuItem.Contains(item.MenuId) ? "checked" : "")>
                                        <label for="checkbox-@item.Name" class="form-check-label">@item.Name</label>
                                    </div>

                                }
                            }
                        }
                    </div>
                </div>

            </div>
            <div class="d-flex justify-content-end">
                <button class="btn" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            toastr.success("@TempData["SuccessMessage"]");
        </script>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            toastr.error("@TempData["ErrorMessage"]");
        </script>
    }

    <script>
        $("#accountTypeDropdown").change(function () {

            console.log("working");
            var selectedRoleId = $(this).val();

            $(".form-check-input").each(function () {
                var itemName = $(this).attr("accountType");
                var shouldBeHidden = (itemName && !itemName.includes(selectedRoleId)) || !itemName; // Logic for showing when null

                $(this).closest(".parent-div-class").toggleClass("hidden", shouldBeHidden);
            });
        });
    </script>
}