@model halloDocEntities.ViewDataModels.businessReq;
@{
    ViewData["Title"] = "Business";
    Layout = "~/Views/Shared/_reqFormLayout.cshtml";
}


<div class="infocon" id="infocon">
    <div class="info">
        <img src="/images/alert-svgrepo-com.svg" alt="">
        <div class="formhead">Information</div>
        <p>
            When submitting a request, you must provide the correct contact information for the patient or the
            responsibly party. Failure to provide the correct email and phone number will delay service or be
            declined
        </p>
        <button type="button" class="btn btn-outline-primary" onclick="hideinfo()">
            <span class="ntext colblue">OK</span>
        </button>

    </div>
</div>


<div class="main">
    <form asp-controller="ReqForm" asp-action="Business" class="row g-2 g-md-3">

        <div class="formhead">Business Information</div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="BFirstName" type="text" class="form-control" id="floatingInput1" placeholder="name@example.com">
            <label class="mylable" for="floatingInput1">Your First Name</label>
            <span asp-validation-for="BFirstName" class="text-danger"></span>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="BLastName" type="text" class="form-control" id="floatingPassword2" placeholder="Password">
            <label class="mylable" for="floatingPassword2">Your Last Name</label>
            <span asp-validation-for="BLastName" class="text-danger"></span>
        </div>
        <div class="form-floating col-12 col-md-6">
            <div class="input-group h-100">
                <select class=" btn btn-outline-secondary numselect form-control" id="countrybtn" aria-label="Default select example">
                    <option selected>Country</option>
                    <option value="1">+91</option>
                    <option value="2">+1</option>
                    <option value="3">+216</option>
                </select>
                <input type="tel" asp-for="BMobile" id="phone" class="form-control" placeholder="Mobile Number" />
                <span asp-validation-for="BMobile" class="text-danger"></span>
            </div>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="BEmail" type="email" class="form-control" id="floatingInput4" placeholder="name@example.com">
            <label class="mylable" for="floatingInput4">Your Email address</label>
            <span asp-validation-for="BEmail" class="text-danger"></span>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="BusinessName" type="text" class="form-control" id="floatingInput5" placeholder="name@example.com">
            <label class="mylable" for="floatingInput5">Business/Property name</label>
            <span asp-validation-for="BusinessName" class="text-danger"></span>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="CaseNumber" type="text" class="form-control" id="floatingInput6" placeholder="name@example.com">
            <label class="mylable" for="floatingInput6">Case Number(optional)</label>
        </div>





        <div class="formhead">Patient Information</div>


        <div class=" form-floating col-12">
            <textarea asp-for="Notes" class="form-control h-100" id="floatingInput7" rows="3"
                      placeholder="Enter symptoms details in detail(optional)"></textarea>
            <label class="mylable" for="floatingInput7">Enter brief details of symptoms(optional)</label>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="form-floating col-12 col-md-6">
            <input asp-for="FirstName" type="text" class="form-control" id="floatingInput8" placeholder="name@example.com">
            <label class="mylable" for="floatingInput8">First Name</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="LastName" type="text" class="form-control" id="floatingPassword8" placeholder="Password">
            <label class="mylable" for="floatingPassword8">Last Name</label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="CreatedDate" type="date" class="form-control" id="fdate" placeholder="Password">
            <label class="mylable" for="fdate">Date of birth</label>
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>

        <div class="formhead">Patient Contact Information</div>

        <div class="form-floating col-12 col-md-6">
            <input asp-for="Email" type="email" class="form-control" id="floatingInput9" placeholder="name@example.com">
            <label class="mylable" for="floatingInput9">Email address</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        

        <div class="form-floating col-12 col-md-6">
            <div class="input-group h-100">
                <select class=" btn btn-outline-secondary numselect form-control" id="countrybtn" aria-label="Default select example">
                    <option selected>Country</option>
                    <option value="1">+91</option>
                    <option value="2">+1</option>
                    <option value="3">+216</option>
                </select>
                <input type="tel" asp-for="Mobile" id="phone" class="form-control" placeholder="Mobile Number" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
        </div>


        <div class="formhead">Patient Location</div>

        <div class="form-floating col-12 col-md-6">
            <input asp-for="Street" type="text" class="form-control" id="4" placeholder="name@example.com">
            <label class="mylable" for="4">Street</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="City" type="text" class="form-control" id="5" placeholder="Password">
            <label class="mylable" for="5">City</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="State" type="text" class="form-control" id="6" placeholder="name@example.com">
            <label class="mylable" for="6">State</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="ZipCode" type="number" class="form-control" id="7" placeholder="Password">
            <label class="mylable" for="7">Zip Code</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="Address" type="text" class="form-control" id="8" placeholder="Password">
            <label class="mylable" for="8">Room #/Suite (Optional)</label>
        </div>




        <div class="btnline">
            <button type="submit" class="btn btn-outline-primary active blbtn">Submit</button>
            <button type="button" asp-area="" asp-controller="ReqForm" asp-action="Business" class="btn btn-outline-primary blbtn">Cancel</button>
        </div>

        @Html.ValidationMessage("fail", null, new { @class= "text-danger fw-bold"})
    </form>

</div>
@section scripts{

    <script type="text/javascript" src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

@section darkAdd {
    const main = document.querySelector(".main");
    var info = document.querySelector(".info");

info.classList.add("pdark");
main.classList.add("d1");
}

@section darkToggle {
const main = document.querySelector(".main");
var info = document.querySelector(".info");

info.classList.toggle("pdark");
main.classList.toggle("d1");
}
