                                            <div class="form-floating col-12 mb-2">
                                                <input asp-for="mobile" type="text" class="form-control" id="floatingInput1" value="@item.mobile">
                                                <label class="mylable" for="floatingInput1">Mobile No.</label>
                                                <span asp-validation-for="mobile" class="text-danger"></span>
                                            </div>
                                            <div class="form-floating col-12 mb-2">
                                                <input asp-for="email" type="text" class="form-control" id="floatingInput10" value="@item.email">
                                                <label class="mylable" for="floatingInput10">Email</label>
                                                <span asp-validation-for="email" class="text-danger"></span>

                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn " data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn ">Send</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @* block case*@
                        <div class="modal fade " id="confirmblock-@item.rid" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Block</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div>
                                            <span class="fw-bold">Patient Name : </span><span>@item.name</span>
                                        </div>
                                        <form asp-area="" asp-controller="ADashboard" asp-action="BlockCase" asp-route-rid="@item.rid" class="row g-2 mt-3">
                                            <div class="form-floating col-12 mb-2">
                                                <input asp-for="notes" type="text" class="form-control" id="floatingInput1" placeholder="Provide additional notes..">
                                                <label class="mylable" for="floatingInput1">Reason for block request..</label>
                                                @*<span asp-validation-for="FFirstName" class="text-danger"></span>*@
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn " data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn ">Save changes</button>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                }
            </tbody>
        </table>

        <div class="pager-container w-50 d-flex flex-row justify-content-evenly" style="margin-inline:auto;">
            @if (ViewBag.pageIndex > 1)
            {
                <a href="@Url.Action("Dmain", new { id = ViewBag.status, pageIndex = ViewBag.pageIndex - 1 })" class="btn btn-previous"><i class="bi bi-caret-left-fill me-1"></i>Previous</a>
            }
            else
            {
                <button disabled class="btn btn-previous"><i class="bi bi-caret-left-fill me-1"></i>Previous</button>
            }

            <span class="page-indicator">Page @ViewBag.pageIndex of @ViewBag.TotalPages</span>

            @if (ViewBag.pageIndex < ViewBag.TotalPages)
            {
                <a href="@Url.Action("Dmain", new { id = ViewBag.status, pageIndex = ViewBag.pageIndex + 1 })" class="btn btn-next">Next<i class="bi bi-caret-right-fill ms-1"></i></a>
            }
            else
            {
                <button disabled class="btn btn-previous">Next<i class="bi bi-caret-right-fill ms-1"></i></button>
            }
        </div>

    </div>

    <div class="accordion d-block d-md-none" id="accordionExample">
        @if (ViewBag.tableData != null)
        {
            @foreach (var item in ViewBag.tableData)
            {
                var bgcolor = @GetBackgroundColor(@item.relation);
                <div class="accordion-item border-bottom-2 mt-1">
                    <h2 class="accordion-header" id="headingOne">
                        <button style=" border:none !important; border-bottom:2px solid gray; color:black;" class="accordion-button border-dark border-2" type="button" data-bs-toggle="collapse" data-bs-target="#flush-@item.guid" aria-expanded="true" aria-controls="flush-@item.guid">
                            <div class="d-flex flex-row justify-content-between w-100 pe-2 align-items-center">
                                <div class="abchild1">
                                    <h4>@item.name</h4>
                                    <h6>@item.address</h6>
                                </div>
                                <div>
                                    <div class="abchild2 d-flex flex-row justify-content-evenly align-items-center">
                                        <span class="circle" style="background-color:@bgcolor; filter:brightness(0.9);"></span>
                                        <span>@item.requstor</span>
                                    </div>
                                    <div style="height:29px; " class="ps-2 pe-2 mt-2 rounded-pill btn-outline-info btnoutline">Map Location</div>

                                </div>
                            </div>
                        </button>
                    </h2>
                    <div id="flush-@item.guid" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                        <div class="accordion-body" style="background-color:#cbe5faa3; border-top:1px solid;">
                            <div class="p-1 d-flex align-items-start flex-column">
                                <div class="d-none" id="acrregion">@item.region</div>
                                <div class="mb-2"><i class="bi bi-cake2 border border-1 border-info rounded-circle p-1 pe-2 ps-2 me-1"></i><span class="fw-bold">Date Of Birth : </span><span>@item.dob</span></div>
                                <div class="mb-2"><i class="bi bi-envelope border border-1 border-info rounded-circle p-1 pe-2 ps-2 me-1"></i> <span class="fw-bold">Email : </span><span>@item.email</span></div>
                                <div class="mb-2"><i class="bi bi-telephone border border-1 border-info rounded-circle p-1 pe-2 ps-2 me-1"></i> <span class="fw-bold">Mobile : </span><span>@item.mobile</span></div>
                                <div class="mb-2"><i class="bi bi-folder2-open border border-1 border-info rounded-circle p-1 pe-2 ps-2 me-1"></i> <span class="fw-bold">Notes : </span><span>@item.notes</span></div>
                                <div class="mb-2"><i class="bi bi-calendar-date border border-1 border-info rounded-circle p-1 pe-2 ps-2 me-1"></i> <span class="fw-bold">Date Of service : </span><span>@item.reqDate</span></div>
                                <div class="mb-2"><i class="bi bi-heart-pulse border border-1 border-info rounded-circle p-1 pe-2 ps-2 me-1"></i> <span class="fw-bold">Physician : </span><span>@item?.PhysicianName</span></div>
                                <div class="mb-2"><i class="bi bi-person border border-1 border-info rounded-circle p-1 pe-2 ps-2 me-1"></i> <span class="fw-bold">Requestor : </span><span> @item.requstor</span></div>
                            </div>

                            <div class="d-flex align-items-center flex-wrap w-100">

                                @if (ViewBag.n == 1)
                                {
                                    <a data-bs-toggle="modal" data-bs-target="#assignreq-@item.rid" class="btnbadge badge rounded-pill bg-info"><i class="fa-solid fa-suitcase" style="margin-right: 0.5rem;"></i><span>Assign Patient</span></a>

                                    <a class="btnbadge badge rounded-pill bg-success" data-bs-toggle="modal" data-bs-target="#cancelcase-@item.rid">
                                        <i class="fa-regular fa-rectangle-xmark" style="margin-right: 0.5rem;"></i>
                                        <span>Cancle Case</span>
                                    </a>

                                    <a data-bs-toggle="modal" data-bs-target="#confirmblock-@item.rid" class="btnbadge badge rounded-pill bg-danger"><i class="fa-solid fa-ban" style="margin-right: 0.5rem;"></i><span>Block Patient</span></a>
                                }

                                <a asp-area="" asp-controller="ADashboard" asp-action="ViewCase" asp-route-rid="@item.rid" class="btnbadge badge rounded-pill bg-success"><i class="fa-solid fa-eye" style="margin-right: 0.5rem;"></i><span>View Case</span></a>
                                <a asp-area="" asp-controller="ADashboard" asp-action="ViewNote" asp-route-rid="@item.rid" class="btnbadge badge rounded-pill bg-success"><i class="fa-solid fa-notes-medical" style="margin-right: 0.5rem;"></i><span>View  Notes</span></a>
                                @if (ViewBag.n != 1)
                                {
                                    <a asp-area="" asp-controller="ADashboard" asp-action="ViewUpload" asp-route-rid="@item.rid" class="btnbadge badge rounded-pill bg-warning"><i class="fa-solid fa-eye" style="margin-right: 0.5rem;"></i><span>View Upload</span></a>
                                }
                                @if (ViewBag.n == 2)
                                {
                                    <a data-bs-toggle="modal" data-bs-target="#transferreq-@item.rid" class="btnbadge badge rounded-pill bg-warning"><i class="fa-solid fa-eye" style="margin-right: 0.5rem;"></i><span>Transfer</span></a>
                                    <a data-bs-toggle="modal" data-bs-target="#sendAgreement-@item.rid" class="btnbadge badge rounded-pill bg-warning"><i class="fa-solid fa-eye" style="margin-right: 0.5rem;"></i><span>send agrrement</span></a>
                                }
                                @if (ViewBag.n == 2 || ViewBag.n == 5)
                                {
                                    <a data-bs-toggle="modal" data-bs-target="#clearCase-@item.rid" class="btnbadge badge rounded-pill bg-danger"><i class="fa-solid fa-eye" style="margin-right: 0.5rem;"></i><span>Clear Case</span></a>
                                }
                                @if (ViewBag.n == 3 || ViewBag.n == 5 || ViewBag.n == 4)
                                {
                                    @*<a asp-area="" asp-controller="ADashboard" asp-action="ViewCase" asp-route-rid="@item.rid" class="btnbadge badge rounded-pill bg-success"><i class="fa-solid fa-eye" style="margin-right: 0.5rem;"></i><span>Doctor Notes</span></a>*@
                                    <a asp-area="" asp-controller="ADashboard" asp-action="ViewCase" asp-route-rid="@item.rid" class="btnbadge badge rounded-pill bg-warning"><i class="fa-solid fa-eye" style="margin-right: 0.5rem;"></i><span>Orders</span></a>
                                    <a asp-area="" asp-controller="ADashboard" asp-action="Encounter" asp-route-rid="@item.rid" class="btnbadge badge rounded-pill bg-warning"><i class="fa-solid fa-eye" style="margin-right: 0.5rem;"></i><span>Encounter</span></a>
                                }
                                @if (ViewBag.n == 5)
                                {
                                    <a asp-area="" asp-controller="ADashboard" asp-action="closeCase" asp-route-rid="@item.rid" class="btnbadge badge rounded-pill bg-danger"><i class="fa-solid fa-eye" style="margin-right: 0.5rem;"></i><span>Close Case</span></a>
                                }
                            </div>

                            <div class="p-1 d-flex justify-content-end">
                                <span class="fw-bold">Chat with : </span>
                                <span class="ms-1 icone-Chome ms-1 text-info"><i class="fa-solid fa-user me-1"></i>Provider</span>

                            </div>
                        </div>
                    </div>
                </div>




            }
        }
    </div>

</section>

@functions {
    string GetBackgroundColor(string relation)
    {
        switch (relation?.ToLower())
        {
            case "patient":
                return "#b1c9ef";
            case "business":
                return "#f5d7db";
            case "family":
                return "#ffff9791";
            case "concierge":
                return "#fd90ff8c";
            // Add more cases if needed
            default:
                return "white"; // Default background color
        }
    }
}

