@model halloDocEntities.ViewDataModels.History;
@{
    ViewData["Title"] = "View upload";
    Layout = "~/Views/Shared/_ADashboard.cshtml";
}
<div class="anav mt-3">
    <a class="anavchild cp tdn ncactive">Dashboard</a>
    <a class="anavchild cp tdn">Provider Location</a>
    <a class="anavchild cp tdn">My Profile</a>
    <a class="anavchild cp tdn">Provider</a>
    <a class="anavchild cp tdn">Partners</a>
    <a class="anavchild cp tdn">Access</a>
    <a class="anavchild cp tdn">Records</a>
</div>
<div class="dashsidebar hideside" id="dashsidebar">
    <a class="dschild cp tdn dschildactive">Dashboard</a>
    <a class="dschild cp tdn">Provider Location</a>
    <a class="dschild cp tdn">My Profile</a>
    <a class="dschild cp tdn">Provider</a>
    <a class="dschild cp tdn">Partners</a>
    <a class="dschild cp tdn">Access</a>
    <a class="dschild cp tdn">Records</a>
</div>
<div class="docMain mt-2">
    <div class="dmboxbar">
        <h2 m-0>Document</h2>
        <a asp-area="" asp-controller="ADashboard" asp-action="Dmain" asp-route-id="2" class="logout tdn dmnewreq mb-3">Back</a>
    </div>

    <div class="dmbox">
        <span>Patient Name</span>
        <h5><span style="color:#68cbe1;">@ViewBag.patientName</span>(<span>@ViewBag.confirmation</span>)</h5>
        <span class="lh-sm">Check here any files that you or your doctor attached for review.</span>
        <form asp-area="" asp-controller="ADashboard" asp-action="uploadbtn" asp-route-reqid="@ViewBag.reqid" enctype="multipart/form-data">
            <div class="input-group mb-3 mt-2" style="height:45px;">
                <input asp-for="myfile" type="file" class="form-control" id="inputGroupFile02">
                <button type="submit" class="input-group-text" style="background-color: #68cbe1; color: white;">
                    <i class="bi bi-cloud-arrow-up mx-2"></i>
                    <span>Upload</span>
                </button>
            </div>
        </form>

        <div class="dmboxbar mt-4">
            <h3 class="mb-0">Documents</h3>
            @* <a asp-area="" asp-controller="pDashboard" asp-action="viewDoc" class="logout tdn dmnewreq ">Donwlod All</a> *@

            <div class="w-75">
                <button class="logout tdn dmnewreq ms-2" id="downloadButton">
                    <span class="d-none d-md-block">Download All</span>
                    <h4 class="mb-0"><i class="d-md-none bi bi-cloud-arrow-down-fill"></i></h4>
                </button>
                <button class="logout tdn dmnewreq ms-2" id="deleteButton">
                    <span class="d-none d-md-block">Delete All</span>
                   <h4 class="mb-0"><i class="d-md-none bi bi-trash3-fill"></i></h4>
                </button>
                <a class="logout tdn dmnewreq ms-2" id="emailButton">
                    <span class="d-none d-md-block">Send Mail</span>
                    <h4 class="mb-0"><i class="d-md-none bi bi-envelope-arrow-down-fill"></i></h4>
                </a>
            </div>

        </div>
        <table class="table w-100 mt-3">
            <thead>
                <tr>
                    <th class="ps-2" scope="col"><input id="maincheckbox" type="checkbox" name="" /></th>
                    <th scope="col">Document</th>
                    <th scope="col">Upload Date</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody class="lh-lg">
                @foreach (var item in ViewBag.FileData)
                {
                    var temp = item.fileName;
                    temp = temp.Substring(temp.IndexOf("_") + 1);

                    <tr class="lh-3">
                        @*<th><input type="checkbox" /></th>*@
                        <td>
                            <input class="formcheckbox" type="checkbox" name="selectedFiles" value="@item.fileName" />

                        </td>

                        <td>@temp</td>
                        <td>@item.uploadDate</td>
                        <td class="d-flex flex-row">

                            <a class="ms-2 logout btnnohovor tdn p-0" href="@Url.Action("DonwlodFile", "ADashboard", new { fileName = item.fileName })">
                                <img class="h-100 w-100" src="~/images/cloud-arrow-down-alt-svgrepo-com.svg" alt="">
                            </a>


                            <button type="button" class="ms-2 logout btnnohovor tdn p-0" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                <i style="color:#4bcbcb;" class="bi bi-trash"></i>
                            </button>

                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header" style="background-color: #ff5353">
                                            <h5 class="modal-title">Are You Sure you want to delete File?</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <a href="@Url.Action("DeleteFile", "ADashboard", new { fileId = item.fileId })" type="button" class="btn" style="background-color:#ff5353 !important; border:1px solid #ff5353 !important; color:white !important;">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </td>
                    </tr>
                }

            </tbody>
            @Html.ValidationMessage("deleted", null, new { @class= "text-success fw-bold"})
        </table>
        <div class="accordion accordion-flush mt-3" id="accordionFlushExample">
            @foreach (var item in ViewBag.FileData)
            {
                var temp = item.fileName;
                temp = temp.Substring(temp.IndexOf("_") + 1);

                <div class="accordion-item">
                    <h2 class="accordion-header border-0">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-@item.fileId" aria-expanded="false" aria-controls="flush-@item.fileId">
                            <input class="formcheckbox me-3" type="checkbox" name="selectedFiles" value="@item.fileName" /> <h4 class="me-2"><i class="bi bi-file-earmark-pdf-fill text-info"></i></h4><b>@temp</b>
                        </button>
                    </h2>
                    <div style="background-color:#cfe2ff;" id="flush-@item.fileId" class="accordion-collapse collapse p-2" data-bs-parent="#accordionFlushExample">

                        <div class="d-flex flex-column justify-content-between h-100 w-100">
                            <div>@item.uploadDate</div>
                            <div class="d-flex mt-2">
                                <a class="ms-2 logout btnnohovor tdn p-1 d-flex align-items-center h-100 w-50" href="@Url.Action("DonwlodFile", "ADashboard", new { fileName = item.fileName })">
                                    <h4><i style="color:#4bcbcb;" class="bi bi-cloud-arrow-down"></i></h4>
                                </a>
                                <a class=" ms-2 logout btnnohovor tdn p-1 d-flex align-items-center h-100 w-50" href="@Url.Action("DeleteFile", "ADashboard", new { fileId = item.fileId })">
                                    <h4><i style="color:#4bcbcb;" class="bi bi-trash"></i></h4>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>

@section Scripts{
    <script>
        //function for main checkbox
        const mainCheckbox = document.getElementById("maincheckbox");
        mainCheckbox.addEventListener("change", fillFormCheckboxes);
        function fillFormCheckboxes() {
            const mainCheckbox = document.getElementById("maincheckbox");
            const formCheckboxes = document.querySelectorAll(".formcheckbox");
            const checked = mainCheckbox.checked;
            formCheckboxes.forEach(checkbox => checkbox.checked = checked);
        }




        //for delete all btn
        document.getElementById("deleteButton").addEventListener("click", function () {
            var selectedCheckboxes = document.querySelectorAll('input[name="selectedFiles"]:checked');
            var selectedFilenames = [];

            for (var i = 0; i < selectedCheckboxes.length; i++) {
                selectedFilenames.push(selectedCheckboxes[i].value);
            }
            if (selectedFilenames.length === 0) {
                alert("No files selected. Please select files to delete.");
                return;  
            }
            // Send the filenames to the controller using AJAX
            sendFilenamesToDeleteFiles(selectedFilenames);
        });

        function sendFilenamesToDeleteFiles(filenames) {
            fetch('@Url.Action("DeleteFiles", "ADashboard", new { reqId = @ViewBag.reqid })', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(filenames)
            })
                .then(response => {
                    window.location.reload();
                    alert("Files Deleted successfully..");
                })
                .catch(error => {
                    alert("Files are not deleted..");
                });
        }

        //for donwlodAll
        document.getElementById("downloadButton").addEventListener("click", function () {
            var selectedCheckboxes = document.querySelectorAll('input[name="selectedFiles"]:checked');
            var selectedFilenames = [];

            for (var i = 0; i < selectedCheckboxes.length; i++) {
                selectedFilenames.push(selectedCheckboxes[i].value);
            }
            if (selectedFilenames.length === 0) {
                alert("No files selected. Please select files to delete.");
                return;
            }
            // Send the filenames to the controller using AJAX
            sendFilenamesToDownloadSelected(selectedFilenames);
        });

        async function sendFilenamesToDownloadSelected(filenames) {
            fetch('@Url.Action("DownloadSelected", "pDashboard")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(filenames)
            })
                .then(async (response) => {
                    const data = await response.blob();
                    console.log(data);

                    const a = document.createElement('a');
                    const url = window.URL.createObjectURL(data);
                    a.href = url;
                    a.download = 'download.zip';
                    document.body.append(a);
                    a.click();
                    a.remove();
                    window.URL.revokeObjectURL(url);
                })
                .catch(error => {
                    alert("not done");
                });
        }


        //for email all btn
        document.getElementById("emailButton").addEventListener("click", function () {
            var selectedCheckboxes = document.querySelectorAll('input[name="selectedFiles"]:checked');
            var selectedFilenames = [];

            for (var i = 0; i < selectedCheckboxes.length; i++) {
                selectedFilenames.push(selectedCheckboxes[i].value);
            }
            if (selectedFilenames.length === 0) {
                alert("No files selected. Please select files to delete.");
                return;
            }
            // Send the filenames to the controller using AJAX
            sendFilenamesToSendFilesInMail(selectedFilenames);
        });

        function sendFilenamesToSendFilesInMail(filenames) {
            fetch('@Url.Action("SendFilesInMail", "ADashboard", new { rid = @ViewBag.reqid })', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(filenames)
            })
                .then(response => {
                    window.location.reload();
                    alert("Email Sent successfully..");
                })
                .catch(error => {
                    alert("Email Can't sent");
                });
        }
    </script>
}