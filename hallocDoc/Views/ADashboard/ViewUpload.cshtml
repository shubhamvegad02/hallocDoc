<div class="docMain mt-3">
    <div class="dmboxbar">
        <h2 m-0>Document</h2>
        <a asp-area="" asp-controller="ADashboard" asp-action="Dmain" asp-route-id="2" class="logout tdn dmnewreq mb-3">Back</a>
    </div>

    <div class="dmbox">
        <span>Patient Name</span>
        <h5><span>@ViewBag.patientName</span>(<span>@ViewBag.confirmation</span>)</h5>
        <span class="lh-sm">Check here any files that you or your doctor attached for review.</span>
        <form asp-area="" asp-controller="ADashboard" asp-action="uploadbtn" asp-route-reqid="@ViewBag.reqid" enctype="multipart/form-data">
            <div class="upbtncon mt-3 w-100">
                <input asp-for="myfile" type="file" id="actual-btn" hidden />

                <!-- our custom upload button -->
                <label class="mylable uploadbtn d-flex align-items-center justify-content-evenly" for="actual-btn">
                    <span class="w-25">
                        <img class="cloudimg" src="~/images/cloud-up-arrow-svgrepo-com.svg"
                             alt="">
                    </span><span>Upload</span>
                </label>

                <!-- name of file chosen -->
                <span id="file-chosen" class="upbtntext">No file selected</span>
            </div>
            <button class="logout tdn h-100 mt-2 " type="submit">submit</button>
        </form>

        <div class="dmboxbar mt-4">
            <h3 class="mb-0">Documents</h3>
            @* <a asp-area="" asp-controller="pDashboard" asp-action="viewDoc" class="logout tdn dmnewreq ">Donwlod All</a> *@

            <div class="w-50">
                <button class="logout tdn dmnewreq ms-2" id="downloadButton">
                    Download All
                </button>
                <button class="logout tdn dmnewreq ms-2" id="deleteButton">
                    Delete All
                </button>
                <a class="logout tdn dmnewreq ms-2" href="@Url.Action("DonwlodFileAll", "pDashboard")">
                    Send Mail
                </a>
            </div>

        </div>
        <table class="table w-100 mt-3">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Document</th>
                    <th scope="col">Upload Date</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody class="lh-lg">
                @foreach (var item in ViewBag.FileData)
                {
                    var temp = item.fileName;
                    temp = temp.Substring(temp.IndexOf("_") + 1);

                    <tr class="lh-3">
                        @*<th><input type="checkbox" /></th>*@
                        <td>
                            <input type="checkbox" name="selectedFiles" value="@item.fileName" />
                            
                        </td>

                        <td>@temp</td>
                        <td>@item.uploadDate</td>
                        <td class="d-flex flex-row">
                            
                            <a class="ms-2 logout btnnohovor tdn p-0" href="@Url.Action("DonwlodFile", "pDashboard", new { fileName = item.fileName })">
                                <img class="h-100 w-100" src="~/images/cloud-arrow-down-alt-svgrepo-com.svg" alt="">
                            </a>
                            <a class=" ms-2 logout btnnohovor tdn p-0" href="@Url.Action("DeleteFile", "ADashboard", new { fileId = item.fileId })">
                                <i style="color:#4bcbcb;" class="bi bi-trash"></i>
                            </a>

                        </td>
                    </tr>
                }

            </tbody>
            @Html.ValidationMessage("deleted", null, new { @class= "text-success fw-bold"})
        </table>
