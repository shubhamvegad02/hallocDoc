@model halloDocEntities.ViewDataModels.patientReq;
@{
    ViewData["Title"] = "SendRequest";
    Layout = "~/Views/Shared/_ADashboard.cshtml";
}
<div class="infocon" id="infocon">
    <div class="info">
        <img src="/images/alert-svgrepo-com.svg" alt="">
        <div class="formhead">Information</div>
        <p>
            When submitting a request, you must provide the correct contact information for the patient or the
            responsibly party. Failure to provide the correct email and phone number will delay service or be
            declined
        </p>
        <button type="button" class="btn btn-outline-primary" onclick="hideinfo()">
            <span class="ntext colblue">OK</span>
        </button>

    </div>
</div>

<div class="main">
    <form asp-controller="ADashboard" asp-action="AdminSendReq" enctype="multipart/form-data" class="row g-2 g-md-3">
        <div class="formhead">Patient Information</div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>



        <div class=" form-floating col-12 mb-2">
            <textarea asp-for="Notes" class="form-control h-100" id="floatingInput1" rows="3"
                      placeholder="Enter symptoms details in detail(optional)"></textarea>
            <label class="mylable" for="floatingInput1">Enter symptoms in detail(optional)</label>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="form-floating col-12 col-md-6">
            <input asp-for="FirstName" type="text" class="form-control" id="floatingInput2" placeholder="name@example.com">
            <label class="mylable" for="floatingInput2">First Name</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>

        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="LastName" type="text" class="form-control" id="floatingPassword" placeholder="Password">
            <label class="mylable" for="floatingPassword">Last Name</label>
            <span asp-validation-for="LastName" class="text-danger"></span>

        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="CreatedDate" type="date" class="form-control" id="fdate" placeholder="Password">
            <label class="mylable" for="fdate">Date of birth</label>
            <span asp-validation-for="CreatedDate" class="text-danger"></span>

        </div>

        <div class="formhead">Patient Contact Information</div>

        <div class="form-floating col-12 col-md-6">
            <input asp-for="Email" type="email" class="form-control" id="floatingInput5" placeholder="name@example.com">
            <label class="mylable" for="floatingInput5">Email address</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-floating col-12 col-md-6">
            <div class="input-group h-100">
                <select class=" btn btn-outline-secondary numselect form-control" id="countrybtn" aria-label="Default select example">
                    <option selected>Country</option>
                    <option value="1">+91</option>
                    <option value="2">+1</option>
                    <option value="3">+216</option>
                </select>
                <input type="tel" asp-for="Mobile" id="phone" class="form-control" placeholder="Mobile Number" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
        </div>

        <div class="formhead">Patient Location</div>

        <div class="form-floating col-12 col-md-6">
            <input asp-for="Street" type="text" class="form-control" id="4" placeholder="name@example.com">
            <label class="mylable" for="4">Street</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input type="text" asp-for="City" class="form-control" id="5" placeholder="Password">
            <label class="mylable" for="5">City</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="State" type="text" class="form-control" id="6" placeholder="name@example.com">
            <label class="mylable" for="6">State</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="ZipCode" type="number" class="form-control" id="7" placeholder="Password">
            <label class="mylable" for="7">Zip Code</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input type="text" class="form-control" id="8" placeholder="Password">
            <label class="mylable" for="8">Room #/Suite (Optional)</label>
        </div>


        <div class="formhead">(Optional) Upload Photo or Document</div>
        <div class="upbtncon">
            <input asp-for="myfile" class="form-control" id="actual-btn" hidden />

            <label class="mylable uploadbtn d-flex align-items-center justify-content-evenly" for="actual-btn">
                <span class="w-25">
                    <img class="cloudimg" src="~/images/cloud-up-arrow-svgrepo-com.svg"
                         alt="">
                </span><span>Upload</span>
            </label>

            <!-- name of file chosen -->
            <span id="file-chosen" class="upbtntext"></span>
        </div>

        <div class="btnline">
            <button type="submit" class="btn btn-outline-primary active blbtn">Submit</button>
            <button type="button" asp-area="" asp-controller="ReqForm" asp-action="Patient" class="btn btn-outline-primary blbtn">Cancel</button>
        </div>
        @Html.ValidationMessage("enterPass", null, new { @class = "text-danger fw-bold" })
        @Html.ValidationMessage("block", null, new { @class = "text-danger fw-bold" })


    </form>

</div>

