@model hallocDoc.ViewDataModels.patientReq;
@{
    ViewData["Title"] = "Patient";
    Layout = "~/Views/Shared/_reqFormLayout.cshtml";
}

<div class="infocon" id="infocon">
    <div class="info">
        <img src="/images/alert-svgrepo-com.svg" alt="">
        <div class="formhead">Information</div>
        <p>
            When submitting a request, you must provide the correct contact information for the patient or the
            responsibly party. Failure to provide the correct email and phone number will delay service or be
            declined
        </p>
        <button type="button" class="btn btn-outline-primary" onclick="hideinfo()">
            <span class="ntext colblue">OK</span>
        </button>

    </div>
</div>

<div class="main">
    <form asp-controller="ReqForm" asp-action="Patient" class="row g-2 g-md-3" >
        <div class="formhead">Patient Information</div>
         <div asp-validation-summary="ModelOnly" class="text-danger"></div> 



        <div class=" form-floating col-12 mb-2">
            <textarea asp-for="Notes" class="form-control h-100" id="floatingInput1" rows="3"
                      placeholder="Enter symptoms details in detail(optional)"></textarea>
            <label class="mylable" for="floatingInput1">Enter symptoms details in detail(optional)</label>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="form-floating col-12 col-md-6">
            <input asp-for="FirstName" type="text" class="form-control" id="floatingInput2" placeholder="name@example.com">
            <label class="mylable" for="floatingInput2">First Name</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>

        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="LastName" type="text" class="form-control" id="floatingPassword" placeholder="Password">
            <label class="mylable" for="floatingPassword">Last Name</label>
            <span asp-validation-for="LastName" class="text-danger"></span>

        </div>
        <div class="form-floating col-12 col-md-6">
            <input asp-for="CreatedDate" type="date" class="form-control" id="fdate" placeholder="Password">
            <label class="mylable" for="fdate">Date of birth</label>
            <span asp-validation-for="CreatedDate" class="text-danger"></span>

        </div>

        <div class="formhead">Patient Contact Information</div>

        <div class="form-floating col-12 col-md-6">
            <input asp-for="Email" type="email" class="form-control" id="floatingInput5" placeholder="name@example.com">
            <label class="mylable" for="floatingInput5">Email address</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <!-- <div class="form-floating col-12 col-md-6">
            <input type="number" class="form-control" id="floatingPassword" placeholder="Password">
            <label class="mylable" for="floatingPassword">Number</label>
        </div> -->
        <!-- <div class="input-group col-12 col-md-6 "> -->
        <!-- <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                aria-expanded="false">+91</button> -->
