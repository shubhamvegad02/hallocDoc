
@{
    ViewData["Title"] = "Concierge";
    Layout = "~/Views/Shared/_reqFormLayout.cshtml";
}

<div class="infocon" id="infocon">
    <div class="info">
        <img src="/images/alert-svgrepo-com.svg" alt="">
        <div class="formhead">Information</div>
        <p>
            When submitting a request, you must provide the correct contact information for the patient or the
            responsibly party. Failure to provide the correct email and phone number will delay service or be
            declined
        </p>
        <button type="button" class="btn btn-outline-primary" onclick="hideinfo()">
            <span class="ntext colblue">OK</span>
        </button>

    </div>
</div>

<div class="main">
    <form action="/" class="row g-2 g-md-3">

        <div class="formhead">Concierge Information</div>
        <div class="form-floating col-12 col-md-6">
            <input type="text" class="form-control" id="floatingInput1" placeholder="name@example.com">
            <label class="mylable" for="floatingInput1">Your First Name</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input type="text" class="form-control" id="floatingPassword" placeholder="Password">
            <label class="mylable" for="floatingPassword">Your Last Name</label>
        </div>
        <div class="col-md-6">
            <div class="input-group mb-3 h-100">
                <select class=" btn btn-outline-secondary numselect" aria-label="Default select example">
                    <option selected>Country</option>
                    <option value="1">+91</option>
                    <option value="2">+1</option>
                    <option value="3">+216</option>
                </select>
                <input type="tel" class="form-control" id="phone" name="phone" placeholder="8155973839"
                       pattern="[0-9]{10}">
            </div>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input type="email" class="form-control" id="floatingInput2" placeholder="name@example.com">
            <label class="mylable" for="floatingInput2">Your Email address</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input type="text" class="form-control" id="floatingInput3" placeholder="name@example.com">
            <label class="mylable" for="floatingInput3">Hotel/Property name</label>
        </div>


        <div class="formhead">Concierge Location</div>

        <div class="form-floating col-12 col-md-6">
            <input type="text" class="form-control" id="4" placeholder="name@example.com">
            <label class="mylable" for="4">Street</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input type="text" class="form-control" id="5" placeholder="Password">
            <label class="mylable" for="5">City</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input type="text" class="form-control" id="6" placeholder="name@example.com">
            <label class="mylable" for="6">State</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input type="number" class="form-control" id="7" placeholder="Password">
            <label class="mylable" for="7">Zip Code</label>
        </div>





        <div class="formhead">Patient Information</div>


        <div class=" form-floating col-12">
            <textarea class="form-control h-100" id="floatingInput4" rows="3"
                      placeholder="Enter symptoms details in detail(optional)"></textarea>
            <label class="mylable" for="floatingInput4">Enter brief details of symptoms(optional)</label>
        </div>

        <div class="form-floating col-12 col-md-6">
            <input type="text" class="form-control" id="floatingInput5" placeholder="name@example.com">
            <label class="mylable" for="floatingInput5">First Name</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input type="text" class="form-control" id="floatingPassword5" placeholder="Password">
            <label class="mylable" for="floatingPassword5">Last Name</label>
        </div>
        <div class="form-floating col-12 col-md-6">
            <input type="date" class="form-control" id="fdate" placeholder="Password">
            <label class="mylable" for="fdate">Date of birth</label>
        </div>

        <div class="formhead">Patient Contact Information</div>

        <div class="form-floating col-12 col-md-6">
            <input type="email" class="form-control" id="floatingInput6" placeholder="name@example.com">
            <label class="mylable" for="floatingInput6">Email address</label>
        </div>
