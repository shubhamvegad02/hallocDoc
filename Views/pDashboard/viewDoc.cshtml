@{
    ViewData["Title"] = "viewData";
    Layout = "~/Views/Shared/pDashboard.cshtml";

}
<div class="dashnav">
    <a class="dnchild  tdn cp dncactive">Dashboard</a>
    <a class="dnchild tdn cp ">Profile</a>
</div>
<div class="dashsidebar hideside" id="dashsidebar">
    <a class="dschild dschildactive  tdn cp ">Dashboard</a>
    <a class="dschild tdn cp ">Profile</a>
</div>
<div class="docMain mt-3">
    <div class="dmboxbar">
        <h2 m-0>Document</h2>
        <a asp-area="" asp-controller="pDashboard" asp-action="History" class="logout tdn dmnewreq mb-3">Back</a>
    </div>

    <div class="dmbox">
        <span>Patient Name</span>
        <h5>shubham</h5>
        <span class="lh-sm">Check here any files that you or your doctor attached for review.</span>
        <div class="upbtncon mt-3 w-100">
            <input type="file" id="actual-btn" hidden />

            <!-- our custom upload button -->
            <label class="mylable uploadbtn d-flex align-items-center justify-content-evenly" for="actual-btn">
                <span>
                    <img class="cloudimg" src="/images/cloud-upload-icon.svg"
                         alt="">
                </span><span>Upload</span>
            </label>

            <!-- name of file chosen -->
            <span id="file-chosen" class="upbtntext">No file selected</span>
        </div>
        <div class="dmboxbar mt-4">
            <h3 class="mb-0">Documents</h3>
            <a asp-area="" asp-controller="pDashboard" asp-action="viewDoc" class="logout tdn dmnewreq ">Donwlod All</a>
        </div>
        <table class="table w-100 mt-3">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Document</th>
                    <th scope="col">Uploader</th>
                    <th scope="col">Upload Date</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody class="lh-lg">
                <tr class="lh-3">
                    <th><input type="checkbox" /></th>
                    <td>report.pdf</td>
                    <td>Shubham</td>
                    <td>@DateTime.Now </td>
                    <td>
                        <a asp-area="" asp-controller="pDashboard" asp-action="viewDoc" class="logout btnnohovor tdn p-0">
                            <img class="h-100 w-100" src="~/images/cloud-arrow-down-alt-svgrepo-com.svg"
                                 alt="">
                        </a>
                    </td>
                </tr>
                <tr class="lh-3">
                    <th><input type="checkbox" /></th>
                    <td>report.pdf</td>
                    <td>Shubham</td>
                    <td>Jan 10,2024</td>
                    <td>
                        <a asp-area="" asp-controller="pDashboard" asp-action="viewDoc" class="logout tdn">det</a>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="accordion accordion-flush mt-3" id="accordionFlushExample">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                        report.pdf
                    </button>
                </h2>
                <div id="flush-collapseOne" class="accordion-collapse collapse p-3" data-bs-parent="#accordionFlushExample">
                    
                    <div>report.pdf</div>
                    <div>Shubham</div>
                    <div>@DateTime.Now</div>
                    <div>
                        <a asp-area="" asp-controller="pDashboard" asp-action="viewDoc" class="logout logsm btnnohovor tdn p-0">
                            <img class="h-100 w-100" src="~/images/cloud-arrow-down-alt-svgrepo-com.svg"
                                 alt="">
                        </a>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                        report.pdf
                    </button>
                </h2>
                <div id="flush-collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                    <div>report.pdf</div>
                    <div>Shubham</div>
                    <div>@DateTime.Now</div>
                    <div>
                        <a asp-area="" asp-controller="pDashboard" asp-action="viewDoc" class="logout btnnohovor tdn p-0">
                            <img class="h-100 w-100" src="~/images/cloud-arrow-down-alt-svgrepo-com.svg"
                                 alt="">
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>